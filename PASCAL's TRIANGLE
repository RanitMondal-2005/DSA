n=5
triangle=[]
for i in range(n):
    # initially fill all elements of each row with 1
    row=[1]*(i+1)
    for j in range(1,i): # as 1st and last element of col always 1
        row[j]=triangle[i-1][j]+triangle[i-1][j-1]
    triangle.append(row)
for i in range(n):
    print(" "*(n-i),end="") # decreasing spaces formation
    for val in triangle[i]:
        # as triangle is a 2D list, traverse through each value and print each row by row
        print(val,end="")
    print()
# if u want output in a 2D list Form 
print(triangle)
